    <style>
        body {
            font-variant-caps: all-petite-caps;
        }
        .widget {
            padding: 5px;
            color: #000000;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            max-width: 95%;
            margin: auto;
            border: 3px solid #000000;
            border-radius: 5px;
            box-shadow: 2px 2px 1px 0px #000000;
        }
        .greet {
            font-size: 3em;
        }
        .date {
            font-family: monospace;
            font-size: 2em;
        }
        .clock {
            font-family: monospace;
            font-size: 2em;
        }
        .time {
            display: inline-block;
            min-width: 20px;
        }
        .colon {
            font-size: 1em;
            display: inline-block;
        }
    </style>
